{
  "moduleFileExtensions": [
    "js",
    "jsx",
    "json",
    "ts",
    "tsx"
  ],
  "rootDir": ".",
  "transform": {
    "^.+\\.(ts|tsx)?$": "babel-jest"
  },
  "testRegex": "(/tests/.*\\.(test|spec))\\.(ts)$",
  "moduleNameMapper": {
    "^@app/(.*)$": "<rootDir>/../src/$1"
  },
  "reporters": [ "default", "jest-junit" ],
  "roots": ["<rootDir>/unit"]
}